  $content .= '</div>';


 $content .= '<div class="card mb-3 border-secondary text-dark w-100">';
 $content .= '    <h4 class="card-header bg-secondary text-light">';
 $content .= '    Links';
 $content .= '    </h4>';
 $content .= '  <div class="card-body">';
 $content .= '  <b>Original Selenium Folders</b><br>';
