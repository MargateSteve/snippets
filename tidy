 $content .= '   <div class="col-lg-4 d-flex flex-column text-center border border-left-0 border-light bg-secondary">';

  $content .= '    <i class="fas fa-phone-volume fa-fw fa-7x mx-auto mt-3"></i>';

 $content .= '            <h2>Call Log</h2>';
